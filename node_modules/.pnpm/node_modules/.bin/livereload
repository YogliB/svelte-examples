#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

export NODE_PATH="/mnt/d/Projects/svelte-examples/node_modules/.pnpm/livereload@0.9.1/node_modules/livereload/bin/livereload.js/node_modules:/mnt/d/Projects/svelte-examples/node_modules/.pnpm/livereload@0.9.1/node_modules/livereload/bin/node_modules:/mnt/d/Projects/svelte-examples/node_modules/.pnpm/livereload@0.9.1/node_modules/livereload/node_modules:/mnt/d/Projects/svelte-examples/node_modules/.pnpm/livereload@0.9.1/node_modules:/mnt/d/Projects/svelte-examples/node_modules/.pnpm/node_modules:/mnt/d/Projects/svelte-examples/node_modules:/mnt/d/Projects/node_modules:/mnt/d/node_modules:/mnt/d/Projects/svelte-examples/node_modules/.pnpm/node_modules/livereload/bin/livereload.js/node_modules:/mnt/d/Projects/svelte-examples/node_modules/.pnpm/node_modules/livereload/bin/node_modules:/mnt/d/Projects/svelte-examples/node_modules/.pnpm/node_modules/livereload/node_modules"
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../livereload/bin/livereload.js" "$@"
else 
  exec node  "$basedir/../livereload/bin/livereload.js" "$@"
fi
